{
  "ConnectionStrings": {
    "Db1": "Server=.;Database=DB1;User Id=app;Password=Password123;TrustServerCertificate=True;",
    "Db2": "Server=.;Database=DB2;User Id=app;Password=Password123;TrustServerCertificate=True;"
  },
  "Logging": {
    "ApplicationName": "DataLifecycleManager",
    "MinimumLevel": "Information",
    "File": {
      "Enabled": true,
      "RetainDays": 14,
      "FileSizeLimitMB": 100
    },
    "Seq": {
      "Enabled": false,
      "ServerUrl": "",
      "BufferRelativePath": "seq-buffer",
      "PeriodSeconds": 10
    }
  },
  "ArchiveSettings": {
    "Enabled": true,
    "DefaultBatchSize": 5000,
    "DefaultOnlineRetentionMonths": 3,
    "DefaultHistoryRetentionMonths": 6,
    "Csv": {
      "Enabled": true,
      "RootFolder": "D:/ArchiveCsv",
      "MaxRowsPerFile": 100000,
      "Delimiter": ",",
      "FileNameFormat": "{TableName}_{FromDate:yyyyMMdd}_{ToDate:yyyyMMdd}_Part{PartIndex}.csv"
    },
    "RetryPolicy": {
      "Enabled": true,
      "MaxRetryCount": 3,
      "RetryDelaySeconds": 10
    },
    "Tables": [
      {
        "Name": "WIP_LOG",
        "SourceConnectionName": "Db1",
        "TargetConnectionName": "Db2",
        "DateColumn": "CREATE_TIME",
        "PrimaryKeyColumn": "SID",
        "OnlineRetentionMonths": 3,
        "HistoryRetentionMonths": 6,
        "BatchSize": 3000,
        "CsvEnabled": true
      },
      {
        "Name": "OPERATION_LOG",
        "SourceConnectionName": "Db1",
        "TargetConnectionName": "Db2",
        "DateColumn": "EVENT_TIME",
        "PrimaryKeyColumn": "SID",
        "OnlineRetentionMonths": 1,
        "HistoryRetentionMonths": 12,
        "BatchSize": 10000,
        "CsvEnabled": true
      }
    ]
  }
}
