@model IEnumerable<ArchiveJobRunLogWithDetails>
@{
    ViewData["Title"] = "Archive Log";

    string GetJobBadgeClass(string status) => status switch
    {
        ArchiveJobStatus.Success => "success",
        ArchiveJobStatus.Running => "warning text-dark",
        _ => "danger"
    };

    string GetDetailBadgeClass(string status) => status switch
    {
        ArchiveJobStatus.Success => "success",
        ArchiveJobStatus.Running => "warning text-dark",
        ArchiveJobStatus.Skipped => "secondary",
        _ => "danger"
    };
}

@await Html.PartialAsync("_ArchiveTabs", "log")

@if (!Model.Any())
{
    <div class="alert alert-info" role="alert">目前沒有任何搬移紀錄。</div>
}
else
{
    foreach (var run in Model)
    {
        var accordionId = $"accordion-{run.JobRun.JobRunId}";
        <div class="card mb-4 shadow-sm">
            <div class="card-header d-flex justify-content-between align-items-center flex-wrap gap-2">
                <div>
                    <div class="fw-bold">Job Run @run.JobRun.JobRunId</div>
                    <small class="text-muted">Host: @(run.JobRun.HostName ?? "-")</small>
                </div>
                <span class="badge bg-@GetJobBadgeClass(run.JobRun.Status)">
                    @run.JobRun.Status
                </span>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-sm table-borderless mb-0">
                        <tbody>
                        <tr>
                            <th scope="row" class="w-25">Started At</th>
                            <td>@run.JobRun.StartedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm:ss")</td>
                            <th scope="row" class="w-25">Ended At</th>
                            <td>@(run.JobRun.EndedAt?.ToLocalTime().ToString("yyyy-MM-dd HH:mm:ss") ?? "--")</td>
                        </tr>
                        <tr>
                            <th scope="row">Status Message</th>
                            <td colspan="3">@(!string.IsNullOrWhiteSpace(run.JobRun.Message) ? run.JobRun.Message : "--")</td>
                        </tr>
                        <tr>
                            <th scope="row">Total Tables</th>
                            <td>@run.JobRun.TotalTables</td>
                            <th scope="row">Succeeded / Failed</th>
                            <td>@run.JobRun.SucceededTables / @run.JobRun.FailedTables</td>
                        </tr>
                        </tbody>
                    </table>
                </div>

                <div class="accordion mt-3" id="@accordionId">
                    @if (!run.Details.Any())
                    {
                        <div class="alert alert-secondary mb-0" role="alert">沒有找到資料表的執行明細。</div>
                    }
                    else
                    {
                        var index = 0;
                        foreach (var detail in run.Details)
                        {
                            var collapseId = $"{accordionId}-item-{index}";
                            var headingId = $"{collapseId}-heading";
                            index++;
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="@headingId">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#@collapseId" aria-expanded="false" aria-controls="@collapseId">
                                        <span class="me-3 fw-bold">@detail.TableName</span>
                                        <span class="badge bg-@GetDetailBadgeClass(detail.Status)">@detail.Status</span>
                                    </button>
                                </h2>
                                <div id="@collapseId" class="accordion-collapse collapse" aria-labelledby="@headingId" data-bs-parent="#@accordionId">
                                    <div class="accordion-body">
                                        <div class="table-responsive">
                                            <table class="table table-sm">
                                                <tbody>
                                                <tr>
                                                    <th scope="row" class="w-25">來源連線</th>
                                                    <td>@detail.SourceConnectionName</td>
                                                    <th scope="row" class="w-25">目標連線</th>
                                                    <td>@detail.TargetConnectionName</td>
                                                </tr>
                                                <tr>
                                                    <th scope="row">Table</th>
                                                    <td>@detail.TableName</td>
                                                    <th scope="row">日期欄位</th>
                                                    <td>@detail.DateColumn</td>
                                                </tr>
                                                <tr>
                                                    <th scope="row">主鍵欄位</th>
                                                    <td>@detail.PrimaryKeyColumn</td>
                                                    <th scope="row">批次大小</th>
                                                    <td>@detail.BatchSize</td>
                                                </tr>
                                                <tr>
                                                    <th scope="row">線上保留截止日</th>
                                                    <td>@detail.OnlineRetentionDate.ToString("yyyy-MM-dd")</td>
                                                    <th scope="row">歷史保留截止日</th>
                                                    <td>@detail.HistoryRetentionDate.ToString("yyyy-MM-dd")</td>
                                                </tr>
                                                <tr>
                                                    <th scope="row">CSV 匯出</th>
                                                    <td>@(detail.CsvEnabled ? $"是 ({detail.CsvRootFolder})" : "否")</td>
                                                    <th scope="row">搬移後刪除</th>
                                                    <td>@(detail.IsPhysicalDeleteEnabled ? "是" : "否")</td>
                                                </tr>
                                                <tr>
                                                    <th scope="row">開始時間</th>
                                                    <td>@detail.StartedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm:ss")</td>
                                                    <th scope="row">結束時間</th>
                                                    <td>@(detail.EndedAt?.ToLocalTime().ToString("yyyy-MM-dd HH:mm:ss") ?? "--")</td>
                                                </tr>
                                                <tr>
                                                    <th scope="row">掃描來源</th>
                                                    <td>@detail.TotalSourceScanned</td>
                                                    <th scope="row">寫入歷史</th>
                                                    <td>@detail.TotalInsertedToHistory</td>
                                                </tr>
                                                <tr>
                                                    <th scope="row">來源刪除</th>
                                                    <td>@(detail.TotalDeletedFromSource?.ToString() ?? "--")</td>
                                                    <th scope="row">CSV 匯出筆數</th>
                                                    <td>@detail.TotalExportedToCsv</td>
                                                </tr>
                                                <tr>
                                                    <th scope="row">歷史刪除</th>
                                                    <td>@(detail.TotalDeletedFromHistory?.ToString() ?? "--")</td>
                                                    <th scope="row">最後處理日期</th>
                                                    <td>@(detail.LastProcessedDate?.ToString("yyyy-MM-dd") ?? "--")</td>
                                                </tr>
                                                <tr>
                                                    <th scope="row">最後處理主鍵</th>
                                                    <td>@(detail.LastProcessedPrimaryKey ?? "--")</td>
                                                    <th scope="row">錯誤訊息</th>
                                                    <td>@(string.IsNullOrWhiteSpace(detail.ErrorMessage) ? "--" : detail.ErrorMessage)</td>
                                                </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    }
}
